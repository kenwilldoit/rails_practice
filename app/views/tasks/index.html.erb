<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<h1>タスク一覧</h1>

<table>
  <tr>
    <th>タイトル</th>
    <th>完了状態</th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title%></td>
      <td><%= task.completed ? "完了" : "未完了" %></td>
    </tr>
<% end %>




